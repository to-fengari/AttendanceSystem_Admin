<Window x:Class="prototype.View.UserAuthentication"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Authentication" Height="210" Width="300" ResizeMode="NoResize" Icon="/Image/ud.png"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Enter Username and Password" Margin="0,0,0,5" FontSize="15"/>
            <TextBlock Text="Username:" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameTextBox" Margin="0,0,0,5"/>

            <TextBlock Text="Password:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="OK" Width="75" Margin="5" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
